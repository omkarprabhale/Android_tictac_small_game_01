<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player1Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hello player1 "
        android:layout_marginTop="@dimen/paddingLarge"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textBig" />
    <TextView
        android:id="@+id/player2Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hello player2 "
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textBig"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/mainLL"
        android:layout_margin="@dimen/paddingLarge">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/paddingMed"
                android:background="#A9A9A9"
                android:gravity="center"
                android:textSize="@dimen/textLarge"
                android:tag="0"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:tag="1"
                android:layout_margin="@dimen/paddingMed"
                android:textSize="@dimen/textLarge"
                android:background="#A9A9A9"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/textLarge"
                android:tag="2"
                android:background="#A9A9A9"
                android:layout_margin="@dimen/paddingMed"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/textLarge"
                android:layout_margin="@dimen/paddingMed"
                android:tag="3"
               android:background="#A9A9A9"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/textLarge"
                android:layout_margin="@dimen/paddingMed"
                android:tag="4"
                android:background="#A9A9A9"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/paddingMed"
                android:textSize="@dimen/textLarge"
                android:tag="5"
                android:background="#A9A9A9"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/paddingMed"
                android:background="#A9A9A9"
                android:textSize="@dimen/textLarge"
                android:tag="6"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/paddingMed"
                android:tag="7"
                android:background="#A9A9A9"
                android:textSize="@dimen/textLarge"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/paddingMed"
                android:tag="8"
                android:background="#A9A9A9"
                android:textSize="@dimen/textLarge"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/winnerTv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:visibility="invisible"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="WINNER is"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/playAgainBtn"
        android:layout_margin="@dimen/paddingLarge"
        android:text="PLAY AGAIN"
        android:visibility="gone"
        android:layout_weight=".5"/>

</LinearLayout>